<Test
    ID="writeObjectReadObject0028"
    date-of-creation="2004-11-02"
    timeout="1"
    >    
        
        
        
        <APITestDescription>
            <TestedClass name="java.io.ObjectOutputStream"/>
            <TestedMethod name="writeObject(Object)"/>
            <TestedMethod name="public void defaultWriteObject()"/>
            
            
            <TestedClass name="java.io.ObjectInputStream"/>
            <TestedMethod name="public final Object readObject() "/>
            
            <Description>
            tests that private methods writeObject() and readObject() in a serializable class are called properly.
            in this test case those methods call ObjectOutputStream.defaultWriteObject() and ObjectInputStream.defaultReadObject()
            </Description>
            </APITestDescription>

