<!DOCTYPE Test SYSTEM "test.dtd">
<!--
Author: Vladimir Nenashev
Version: $Revision: 1.6 $
-->
<Test
	ID="StackTest1"
        date-of-creation="2005-10-17"
        timeout="3">
    	<Copyright value="apache"/>
        <Author value="Vladimir Nenashev"/>
        <Description>
		Java class calls its native method. Native method
		calls itself with Call_Type_Method() JNI function
		specified number of times (not so much times to cause
		stack oveflow). Then the method carries out some calculation
		and returns the result to the top level (Java main method).
		Parameters:
			-arrSize - Length of arrays for calculations (100000 by default)
			-invCount - Recursion depth (0 by default)
        </Description>        
        <Keyword name="stress"/>
        <Source name="StackTest1.java"/>

        <Runner ID="Runtime">
            <Option value="-Dorg.apache.harmony.test.share.stress.ReliabilityRunner.params=
					org.apache.harmony.test.stress.jni.stack.StackTest1 {}"/>
		<Option value="-Dorg.apache.harmony.test.stress.jni.stack.share.STStackTest.fillMemory=0"/>
		<Option value="-Dorg.apache.harmony.test.stress.jni.stack.share.STStackTest.invCount=0"/>
			<Param name="toRun" value="org.apache.harmony.test.share.stress.ReliabilityRunner">
			</Param>
		</Runner>
		<Restriction name="OtherVMOnly"/>
</Test>